<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.utini.utini.form">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="NEW TRANSACTION"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/typeHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction Type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"/>
    <RadioGroup
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/typeHolder"
        app:layout_constraintLeft_toLeftOf="@id/typeHolder">
        <RadioButton
            android:id="@+id/Debit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/Credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit"/>
    </RadioGroup>
    <TextView
        android:id="@+id/monthHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type"
        app:layout_constraintLeft_toLeftOf="@id/type"
        android:text="Month"
        android:layout_marginTop="12dp"/>
    <Spinner
        android:id="@+id/monthSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/month_array"
        app:layout_constraintTop_toBottomOf="@id/monthHolder"
        app:layout_constraintLeft_toLeftOf="@id/monthHolder">
    </Spinner>
    <TextView
        android:id="@+id/sourceHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source"
        app:layout_constraintTop_toBottomOf="@id/monthSpinner"
        app:layout_constraintLeft_toLeftOf="@id/monthSpinner"
        android:layout_marginTop="12dp"/>
    <EditText
        android:id="@+id/Source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sourceHolder"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/sourceHolder"
        android:inputType="textNoSuggestions"
        android:lines="1"/>
    <TextView
        android:id="@+id/amountHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        app:layout_constraintTop_toBottomOf="@id/Source"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@id/Source"/>
    <EditText
        android:id="@+id/amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/Source"
        app:layout_constraintRight_toRightOf="@id/Source"
        app:layout_constraintTop_toBottomOf="@id/amountHolder"
        android:inputType="number"
        android:lines="1"/>
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount"
        android:layout_marginStart="62dp"
        android:layout_marginTop="15dp"
        />
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="15dp"
        />
</android.support.constraint.ConstraintLayout>
</ScrollView>